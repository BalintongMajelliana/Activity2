class Car:
    # Constructor to initialize brand, model, and year attributes
    def __init__(self, brand, model, year):
        self.brand = brand
        self.model = model
        self.year = year

    # Method to display the car details
    def display_info(self):
        print(f"Brand: {self.brand}")
        print(f"Model: {self.model}")
        print(f"Year: {self.year}")

# Creating two car objects
car1 = Car("Honda", "Honda civic", 2023)
car2 = Car("BMW", "BMW X5", 2022)

# Displaying details of both cars
print("Car 1 Details:")
car1.display_info()

print("\nCar 2 Details:")
car2.display_info()